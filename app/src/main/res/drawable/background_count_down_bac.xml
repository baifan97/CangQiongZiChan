            <corners android:radius="16dp" />
        </shape>
</item>

<item>
<shape>

    <gradient
        android:angle="0"
        android:endColor="#ffcf7a"
        android:startColor="#fdb837" />

    <corners android:radius="16dp" />
</shape>
</item>
</layer-list>